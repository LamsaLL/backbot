# Backbot Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Backpack Exchange API Configuration
PRIVATE_KEY=your_private_key_here
PUBLIC_KEY=your_public_key_here
API_URL=https://api.backpack.exchange

# Trading Configuration
LIMIT_ORDER=100  # Minimum order size in USD
SIMULATION_MODE=true  # ALWAYS start with true for testing!

# Optional: Database and Logging
DB_PATH=./data/backbot.db
LOG_LEVEL=info

# Optional: Risk Management
MAX_POSITION_SIZE=1000  # Maximum position size in USD
STOP_LOSS_PERCENT=2.0   # Stop loss percentage
TAKE_PROFIT_PERCENT=4.0 # Take profit percentage
